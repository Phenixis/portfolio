{
    "branches": [
        {
            "name": "main",
            "channel": "latest"
        },
        {
            "name": "canary",
            "prerelease": "canary",
            "channel": "canary"
        },
        {
            "name": "V*.*.*",
            "prerelease": "dev",
            "channel": "dev"
        }
    ],
    "repositoryUrl": "https://github.com/Phenixis/life_os",
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "preset": "conventionalcommits",
                "releaseRules": [
                    {
                        "type": "feat",
                        "release": "minor"
                    },
                    {
                        "type": "fix",
                        "release": "patch"
                    },
                    {
                        "type": "perf",
                        "release": "patch"
                    },
                    {
                        "type": "refactor",
                        "release": "patch"
                    },
                    {
                        "type": "style",
                        "release": "patch"
                    },
                    {
                        "type": "docs",
                        "release": false
                    },
                    {
                        "type": "test",
                        "release": false
                    },
                    {
                        "type": "chore",
                        "release": false
                    },
                    {
                        "scope": "no-release",
                        "release": false
                    }
                ]
            }
        ],
        [
            "@semantic-release/release-notes-generator",
            {
                "preset": "conventionalcommits",
                "presetConfig": {
                    "types": [
                        {
                            "type": "feat",
                            "section": "üöÄ Features",
                            "hidden": false
                        },
                        {
                            "type": "fix",
                            "section": "üêõ Bug Fixes",
                            "hidden": false
                        },
                        {
                            "type": "perf",
                            "section": "‚ö° Performance Improvements",
                            "hidden": false
                        },
                        {
                            "type": "refactor",
                            "section": "‚ôªÔ∏è Code Refactoring",
                            "hidden": false
                        },
                        {
                            "type": "style",
                            "section": "üíé Styles",
                            "hidden": false
                        },
                        {
                            "type": "docs",
                            "section": "üìö Documentation",
                            "hidden": false
                        },
                        {
                            "type": "test",
                            "section": "üß™ Tests",
                            "hidden": false
                        },
                        {
                            "type": "chore",
                            "section": "üîß Maintenance",
                            "hidden": true
                        }
                    ]
                }
            }
        ],
        [
            "@semantic-release/changelog",
            {
                "changelogFile": "CHANGELOG.md",
                "changelogTitle": "# Changelog\n\nAll notable changes to this project will be documented in this file."
            }
        ],
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "echo 'Preparing release ${nextRelease.version}'"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "CHANGELOG.md",
                    "package.json"
                ],
                "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ],
        [
            "@semantic-release/github",
            {
                "successComment": "üéâ This ${issue.pull_request ? 'PR is included' : 'issue has been resolved'} in version ${nextRelease.version} :tada:",
                "failComment": false,
                "failTitle": false,
                "labels": false,
                "releasedLabels": false
            }
        ]
    ]
}
